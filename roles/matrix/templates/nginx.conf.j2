# Managed by Ansible
user  nginx;
worker_processes  auto;

events { worker_connections  1024; }

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;
  access_log    /dev/stdout;
  error_log     /dev/stderr warn;
  sendfile        on;
  keepalive_timeout  65;
  resolver 127.0.0.11 valid=10s ipv6=off;
  resolver_timeout 5s;

  server {
    listen 80;
    server_name _;

    client_max_body_size 50m;

    location = /.well-known/matrix/client {
      default_type application/json;
      add_header Access-Control-Allow-Origin * always;
      return 200 '{"m.homeserver":{"base_url":"https://{{ matrix_fqdn }}"}}';
    }

    location = /.well-known/matrix/server {
      default_type application/json;
      return 200 '{"m.server":"{{ matrix_fqdn }}:443"}';
    }

    location /_matrix {
      set $synapse_upstream http://synapse:8008;
      proxy_pass $synapse_upstream;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /_synapse/admin {
      set $synapse_upstream http://synapse:8008;
      proxy_pass $synapse_upstream;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    location = /admin {
      return 301 /admin/;
    }

    location /admin/ {
      proxy_pass http://synapse-admin:{{ synapse_admin_upstream_port }}/;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Prefix /admin;
    }

{% if matrix_web_secondary_client_normalized | length > 0 %}
    location = {{ matrix_web_secondary_path_normalized }} {
      return 301 {{ matrix_web_secondary_path_normalized }}/;
    }

    location {{ matrix_web_secondary_path_normalized }}/ {
{% if matrix_web_secondary_client_normalized == 'cinny' %}
      proxy_pass http://cinny:80/;
{% else %}
      proxy_pass http://fluffychat:80/;
{% endif %}
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Prefix {{ matrix_web_secondary_path_normalized }};
{% if matrix_web_secondary_client_normalized == 'cinny' and cinny_hide_register_prompt | bool %}
      # Cinny renders a register CTA even when the homeserver has registration disabled.
      # Hide this prompt to avoid sending users to a non-working flow.
      proxy_set_header Accept-Encoding "";
      sub_filter_types text/html;
      sub_filter_once on;
      sub_filter '</head>' '<style>a[href*="/register"]{display:none!important;} p:has(a[href*="/register"]){display:none!important;}</style><script>(function(){function h(){document.querySelectorAll("a[href*=\\"/register\\"]").forEach(function(a){var c=a.closest("p,div");if(c&&/register/i.test(c.textContent||"")){c.style.display="none";}else{a.style.display="none";}});}h();new MutationObserver(h).observe(document.documentElement,{childList:true,subtree:true});})();</script></head>';
{% endif %}
    }
{% endif %}

    location / {
{% if matrix_web_default_client_normalized == 'cinny' %}
      proxy_pass http://cinny:80;
{% else %}
      proxy_pass http://fluffychat:80;
{% endif %}
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
{% if matrix_web_default_client_normalized == 'cinny' and cinny_hide_register_prompt | bool %}
      # Cinny renders a register CTA even when the homeserver has registration disabled.
      # Hide this prompt to avoid sending users to a non-working flow.
      proxy_set_header Accept-Encoding "";
      sub_filter_types text/html;
      sub_filter_once on;
      sub_filter '</head>' '<style>a[href*="/register"]{display:none!important;} p:has(a[href*="/register"]){display:none!important;}</style><script>(function(){function h(){document.querySelectorAll("a[href*=\\"/register\\"]").forEach(function(a){var c=a.closest("p,div");if(c&&/register/i.test(c.textContent||"")){c.style.display="none";}else{a.style.display="none";}});}h();new MutationObserver(h).observe(document.documentElement,{childList:true,subtree:true});})();</script></head>';
{% endif %}
    }
  }
}
