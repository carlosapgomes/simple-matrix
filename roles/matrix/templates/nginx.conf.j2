# Managed by Ansible
user  nginx;
worker_processes  auto;

events { worker_connections  1024; }

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;
  access_log    /dev/stdout;
  error_log     /dev/stderr warn;
  sendfile        on;
  keepalive_timeout  65;
  resolver 127.0.0.11 valid=10s ipv6=off;
  resolver_timeout 5s;

  server {
    listen 80;
    server_name _;

    client_max_body_size 50m;
{% set matrix_client_well_known = {"m.homeserver": {"base_url": "https://" ~ matrix_fqdn}} %}
{% if synapse_admin_restrict_baseurl | default("", true) | string | length > 0 %}
{% set matrix_client_well_known = matrix_client_well_known | combine({"cc.etke.synapse-admin": {"restrictBaseUrl": synapse_admin_restrict_baseurl}}) %}
{% endif %}
{% if synapse_admin_well_known_homeserver | default("", true) | string | length > 0 %}
{% set matrix_client_well_known = matrix_client_well_known | combine({"io.famedly.login": {"homeserver": synapse_admin_well_known_homeserver}}) %}
{% endif %}

    location = /.well-known/matrix/client {
      default_type application/json;
      add_header Access-Control-Allow-Origin * always;
      return 200 '{{ matrix_client_well_known | to_json }}';
    }

    location = /.well-known/matrix/server {
      default_type application/json;
      return 200 '{"m.server":"{{ matrix_fqdn }}:443"}';
    }

    location /_matrix {
      set $synapse_upstream http://synapse:8008;
      proxy_pass $synapse_upstream;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /_synapse/admin {
      set $synapse_upstream http://synapse:8008;
      proxy_pass $synapse_upstream;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }

    location = /admin {
      return 301 /admin/;
    }

    location /admin/ {
      proxy_pass http://synapse-admin:{{ synapse_admin_upstream_port }}/;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
      proxy_set_header X-Forwarded-Prefix /admin;
    }

    location = {{ matrix_web_assets_url_path }} {
      return 301 {{ matrix_web_assets_url_path }}/;
    }

    location {{ matrix_web_assets_url_path }}/ {
      alias /srv/matrix-assets/;
      autoindex off;
      add_header Cache-Control "public, max-age=3600";
    }

    location / {
      proxy_pass http://element-classic:{{ element_classic_upstream_port }};
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header X-Forwarded-Proto $scheme;
    }
  }
}
