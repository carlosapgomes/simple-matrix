{% set element_classic_route_prefix = '/' if matrix_web_default_client_normalized == 'element_classic' else (matrix_web_secondary_path_normalized ~ '/') %}
{% set element_classic_login_url = element_classic_route_prefix ~ '#/login?lang=' ~ element_classic_custom_welcome_locale %}
{% set element_classic_register_url = element_classic_route_prefix ~ '#/register' %}
<style type="text/css">
  .hgrs-welcome-wrap {
    padding: 24px;
    box-sizing: border-box;
    font-family: "Helvetica Neue", Arial, sans-serif;
    color: #0f172a;
  }

  .hgrs-welcome-card {
    width: 100%;
    max-width: 560px;
    box-sizing: border-box;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(15, 23, 42, 0.18);
    padding: 28px;
    text-align: center;
    margin: 0 auto;
  }

  .hgrs-welcome-logo {
    display: block;
    max-height: 56px;
    max-width: 260px;
    width: auto;
    margin: 0 auto 20px;
  }

  .hgrs-welcome-title {
    margin: 0 0 10px;
    font-size: clamp(1.5rem, 3.4vw, 2.1rem);
    line-height: 1.2;
  }

  .hgrs-welcome-subtitle {
    margin: 0;
    color: #475569;
    font-size: 1rem;
  }

  .hgrs-welcome-actions {
    margin-top: 24px;
  }

  .hgrs-welcome-btn {
    display: inline-block;
    border-radius: 10px;
    padding: 11px 18px;
    text-decoration: none;
    font-weight: 600;
    margin: 6px;
  }

  .hgrs-welcome-btn-primary {
    background: #0f766e;
    color: #ffffff;
  }

  .hgrs-welcome-btn-secondary {
    background: #e2e8f0;
    color: #0f172a;
  }
</style>

<div class="hgrs-welcome-wrap" lang="{{ element_classic_custom_welcome_locale | replace('_', '-') }}">
  <div class="hgrs-welcome-card">
{% if element_classic_branding_logo_file | trim | length > 0 %}
    <img class="hgrs-welcome-logo" src="{{ matrix_web_assets_url_path }}/{{ element_classic_branding_logo_file }}" alt="Logo">
{% endif %}
    <h1 class="hgrs-welcome-title">{{ element_classic_custom_welcome_title }}</h1>
    <p class="hgrs-welcome-subtitle">{{ element_classic_custom_welcome_subtitle }}</p>
    <div class="hgrs-welcome-actions">
      <a class="hgrs-welcome-btn hgrs-welcome-btn-primary" href="{{ element_classic_login_url }}" target="_parent">Entrar</a>
{% if not (element_classic_custom_welcome_hide_create_account | bool) %}
      <a class="hgrs-welcome-btn hgrs-welcome-btn-secondary" href="{{ element_classic_register_url }}" target="_parent">Criar conta</a>
{% endif %}
    </div>
  </div>
</div>
